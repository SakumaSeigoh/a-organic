include ./_const.pug

doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    title AKARI Organic
    link(rel='icon', type='image/png', href='./img/favicon.png')
    link(rel='stylesheet', content='text/plain', href='https://unpkg.com/ress/dist/ress.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Philosopher')
    link(rel='stylesheet', href='./css/products.css' media='screen and (min-width: 769px)')
    link(rel='stylesheet', href='./css/sp_products.css' media='screen and (max-width: 768px)')
    script(type='text/javascript', src='./js/module/build.js')

  body
    include ./header.pug

    div.page-title-area
      div.page-title
        p Products

    div.middle-bg

    section.wrapper.product-list
      div.sect-index
        p 製品一覧
        span.idx Item List

      each product in product_list
        div(class=`${product['base_class']} ${product['sp_class']}`)
          img.p-img(src=`${product['url']}`, alt=`${product['alt']}`)
          div.p-description
            p.p-title #{product['title']}
            p.p-index #{product['index']}
            hr
            p.p-text #{product['text']}
            div.sect-btn
              a.btn.btn-border(href=`${product['link']}`) More

    include ./footer.pug