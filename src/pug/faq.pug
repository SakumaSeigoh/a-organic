include ./_const.pug

doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    title AKARI Organic
    link(rel='icon', type='image/png', href='./img/favicon.png')
    link(rel='stylesheet', content='text/plain', href='https://unpkg.com/ress/dist/ress.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Philosopher')
    link(rel='stylesheet', href='./css/faq.css' media='screen and (min-width: 769px)')
    link(rel='stylesheet', href='./css/sp_faq.css' media='screen and (max-width: 768px)')
    script(type='text/javascript', src='./js/module/build.js')

  body
    include ./header.pug

    div.page-title-area
      div.page-title
        p FAQ

    div.middle-bg

    div.wrapper.faq-list
      div.sect-index
        p よくあるご質問
        span.idx FAQ

      div.sect-main
        p お客様からのご質問にお答えいたします。

      div#question
        each question in question_list
          div.q-contents
            p.q-title(data-content='#'+`${question['id']}`) #{question['content']}
              span.q-btn
            p.q-answer(id=`${question['id']}`) #{question['answer']}

    include ./footer.pug